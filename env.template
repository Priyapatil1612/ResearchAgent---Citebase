# Research Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./research_agent.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/research_agent

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Search Provider Configuration (Choose one)
# Option 1: DuckDuckGo (Free, no API key required)
SEARCH_PROVIDER=duckduckgo

# Option 2: SerpAPI (More reliable, requires API key)
# SEARCH_PROVIDER=serpapi
# SERPAPI_API_KEY=your_serpapi_key_here

# Research Agent Settings
MAX_PAGES_TO_SCRAPE=8
MAX_TOTAL_CHUNKS=200
CHUNK_SIZE_TOKENS=800
CHUNK_OVERLAP_TOKENS=120
RETRIEVAL_TOP_K=6

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Logging
LOG_LEVEL=INFO
PRINT_CONFIG_ON_STARTUP=true

# Rate Limiting
RATE_LIMIT_RPS=2.0
REQUEST_TIMEOUT_SECONDS=15
MAX_RETRIES=2

